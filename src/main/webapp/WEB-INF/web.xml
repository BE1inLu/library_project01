    <servlet-class>com.servlet.bookservlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>bookservlet</servlet-name>
    <url-pattern>/webpage/jsp-pages/page-jsp/searchbookpage/bookservlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>borrowservlet</servlet-name>
    <servlet-class>com.servlet.borrowservlet</servlet-class>
  </servlet>
  
